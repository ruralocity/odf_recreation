<div class="card mt-3 mb-3">
  <div class="card-body">
    <h2 class="card-title"><%= opportunity.name %></h2>
    <div class="card-subtitle text-muted">
      <%= opportunity.state_forest.name %> State Forest |
      <%= opportunity.description %>
    </div>
    <div class="card-text">
      <dl>
        <dt>Recreation types</dt>
        <dd><%= opportunity.types.pluck(:name).join(", ") %></dd>
        <dt>Season</dt>
        <dd><%= opportunity.season %></dd>
        <dt>Amenities</dt>
        <dd><%= opportunity.amenities %></dd>
      </dl>

      <h3>Camping information</h3>
      <dl>
        <dt>Number of sites</dt>
        <dd><%= opportunity.number_of_sites %></dd>
        <dt>Overnight fee</dt>
        <dd><%= opportunity.overnight_fee %></dd>
      </dl>

      <h3>Contact</h3>
      <dl>
        <dt>District</dt>
        <dd><%= opportunity.district.name %></dd>
        <dt>Phone</dt>
        <dd><%= opportunity.contact_number %></dd>
      </dl>
    </div>
  </div>
</div>
