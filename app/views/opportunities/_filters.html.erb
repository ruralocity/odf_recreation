<div class="mt-3">
  <h4>Filters</h4>

  <div class="alert alert-primary" role="alert">
    <strong>
      Showing <%= @opportunities.length %> recreation opportunities.
    </strong>
    Select filters to narrow or broaden results.
  </div>

  <%= form_tag root_path, method: :get do %>

    <div class="mt-3 mb-3">
      <h5>State forest:</h5>
      <% StateForest.all.each do |forest| %>
        <div class="form-check">
          <%= label_tag do %>
            <%=
              check_box_tag "state_forest_id[]",
                forest.id,
                params.
                  fetch(:state_forest_id, []).
                  collect(&:to_i).
                  include?(forest.id),
                class: "form-check-input"
            %>
            <%= forest.name %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-3 mb-3">
      <h5>Type:</h5>
      <% Type.all.each do |type| %>
        <div class="form-check">
          <%= label_tag do %>
            <%=
              check_box_tag "type_id[]",
                type.id,
                params.
                  fetch(:type_id, []).
                  collect(&:to_i).
                  include?(type.id),
                class: "form-check-input"
            %>
            <%= type.name %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-3 mb-3">
      <%= submit_tag "Filter", class: "btn btn-primary" %>
      <%= link_to "Reset filters", root_path, class: "btn btn-light" %>
    </div>
  <% end %>
</div>
